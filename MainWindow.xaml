        <Button x:Name="RemoveUser_btn" Content="Remove user" Grid.Column="1" HorizontalAlignment="Left" Margin="84,337,0,0" VerticalAlignment="Top" Width="116" Click="RemoveUser_btn_Click" IsEnabled="False"/>

    </Grid>
</Window>
