        <Label x:Name="Userlist_Label" Content="           User list" HorizontalAlignment="Left" Margin="116,132,0,0" VerticalAlignment="Top" Width="122" Grid.ColumnSpan="2"/>
        <Label x:Name="AdminList_Label" Content="         Admin list&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="226,132,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="MoveTo_adminBtn" Content="Move to admin -&gt;" Grid.Column="1" HorizontalAlignment="Left" Margin="84,204,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.698,0.441" Click="MoveTo_adminBtn_Click" IsEnabled="False"/>
